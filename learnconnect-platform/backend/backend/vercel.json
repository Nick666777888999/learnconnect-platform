{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/",
      "dest": "/api/health.js"
    }
  ],
  "env": {
    "JWT_SECRET": "learnconnect_jwt_secret_2024"
  }
}
